        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" >
        <activity
            android:name="org.pytorch.demo.objectdetection.LoginActivity"
            android:exported="false" />
        <activity
            android:name="org.pytorch.demo.objectdetection.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.pytorch.demo.objectdetection.MainActivity" />
        <activity
            android:name="org.pytorch.demo.objectdetection.ObjectDetectionActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
